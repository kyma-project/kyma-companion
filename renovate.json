{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":semanticCommitScopeDisabled"
  ],
  "enabledManagers": [
    "poetry"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "poetry"
      ],
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "addLabels": [
        "dependencies"
      ],
      "groupName": "Development Dependencies"
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "matchDepTypes": [
        "test-dependencies"
      ],
      "addLabels": [
        "dependencies"
      ],
      "groupName": "Test Dependencies"
    }
  ]
}
