{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageFiles": [
    "pyproject.toml",
    "doc_indexer/pyproject.toml",
    "tests/blackbox/pyproject.toml"
  ],
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":semanticCommitScopeDisabled"
  ],
  "enabledManagers": [
    "poetry"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "poetry"
      ],
      "matchDepTypes": [
        "dev"
      ],
      "groupName": "Dev Dependencies in {{packageFileName}} / {{packageName}}",
      "addLabels": [
        "dependencies"
      ]
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "matchDepTypes": [
        "test"
      ],
      "groupName": "Test Dependencies in {{packageFileName}} / {{packageName}}",
      "addLabels": [
        "dependencies"
      ]
    }
  ]
}
